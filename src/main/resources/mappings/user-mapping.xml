<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moviment.mapper.UserMapper">

    <insert id="saveUser">
        <![CDATA[
            INSERT INTO USERS VALUES (USER_ID_SEQ.NEXTVAL, #{email}, #{password}, #{username}, NVL(#{auth_provider, jdbcType=VARCHAR}, 'LOCAL'), SYSTIMESTAMP, NVL(#{role, jdbcType=VARCHAR}, 'USER'))
        ]]>
    </insert>
    <select id="getUser" resultType="user">
        <![CDATA[
            SELECT *
              FROM USERS
             WHERE ID = #{ID}
        ]]>
    </select>
    <select id="findUserByEmail" resultType="user">
        <![CDATA[
            SELECT *
              FROM USERS
             WHERE ID = #{userEmail}
        ]]>
    </select>
</mapper>